# ============================================
# SKAI Environment Configuration (Template)
# ============================================
# Copy this file to .env.local and fill with your actual values

# --------------------------------------------
# AlemLLM API Configuration
# --------------------------------------------
ALEMLLM_API_URL="<YOUR_ALEMLLM_API_URL>"
ALEMLLM_MODEL="astanahub/alemllm"

# --------------------------------------------
# PostgreSQL Vector Databases
# --------------------------------------------
# VND Database (Внутренние Нормативные Документы)
VND_DB_HOST="your-database-host"
VND_DB_PORT="5432"
VND_DB_NAME="vnd"
VND_DB_USER="your-username"
VND_DB_PASSWORD="your-secure-password"

# NPA Database (Нормативно-Правовые Акты)
NPA_DB_HOST="your-database-host"
NPA_DB_PORT="5432"
NPA_DB_NAME="npa"
NPA_DB_USER="your-username"
NPA_DB_PASSWORD="your-secure-password"

# --------------------------------------------
# Embedding Service (BGE-M3 External API)
# --------------------------------------------
EMBEDDING_SERVICE_URL="https://bge-m3.sk-ai.kz"

# --------------------------------------------
# TTS Service
# --------------------------------------------
# URL используется только на сервере (Next.js API proxy)
# Фронтенд использует /api/tts для избежания CORS
NEXT_PUBLIC_TTS_API_URL="https://tts.sk-ai.kz/api/tts"

# --------------------------------------------
# NextAuth Configuration
# --------------------------------------------
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-random-secret-key-min-32-chars"
NEXTAUTH_URL="http://localhost:3000"

# --------------------------------------------
# Application Settings
# --------------------------------------------
NODE_ENV="development"
